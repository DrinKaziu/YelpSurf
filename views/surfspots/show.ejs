<% include ../partials/header %>


<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpSurf</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
        <div id="map"></div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
            <img class="img-responsive" src="<%= surfspot.image %>">
            <div class="caption-full">
                <h4 class="pull-right">$<%= surfspot.cost %>/night</h4>
                <h4><a><%= surfspot.name %></a></h4>
                <p><%= surfspot.description %></p>
                <p><em>Submitted By: <%= surfspot.author.username %>, <%= moment(surfspot.createdAt).fromNow() %></em></p>
                <% if(currentUser && surfspot.author.id.equals(currentUser._id)) { %>
                    <a href="/surfspots/<%= surfspot._id %>/edit" class="btn btn-xs btn-warning" >Edit</a>
                    <form class="delete-form" action="/surfspots/<%= surfspot._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>
        </div>
        <div class="well">
            <div class="text-right">
                <a class="btn btn-success" href="/surfspots/<%= surfspot._id %>/comments/new">Leave Comment</a>
            </div>
            <hr>
            <% surfspot.comments.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                        <p><%= comment.text %></p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a class="btn btn-xs btn-warning" href="/surfspots/<%= surfspot._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/surfspots/<%= surfspot._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
  function initMap() {
    var lat = <%= surfspot.lat %>;
    var lng = <%= surfspot.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= surfspot.name %><br />
      <%= surfspot.location %></strong>
      <p><%= surfspot.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgORrw49LWbC712Y6ozM4IEaoio0Yc-rs&callback=initMap"></script>



<% include ../partials/footer %>

