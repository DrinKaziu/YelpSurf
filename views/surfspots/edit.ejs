<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= surfspot.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/surfspots/<%= surfspot._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="surfspot[name]" value="<%= surfspot.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="surfspot[price]" value="<%= surfspot.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="surfspot[image]" value="<%= surfspot.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="surfspot[description]" value="<%= surfspot.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <a href="/surfspots">Go Back</a>   
        </form>
        </div>
    </div>
</div>



<% include ../partials/footer %>