<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 style="text-align: center;">Edit <%= surfspot.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/surfspots/<%= surfspot._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="surfspot[name]" value="<%= surfspot.name %>">
            </div>
            <div class="form-group">
              <label for="cost">Cost</label>
              <input class="form-control" type="number" name="cost" value="<%= surfspot.cost %>" step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= surfspot.location %>">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="surfspot[image]" value="<%= surfspot.image %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="surfspot[description]" value="<%= surfspot.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <a href="/surfspots">Go Back</a>   
    </form>
    </div>
</div>



<% include ../partials/footer %>