<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Create a new Surf Spot</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/surfspots" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
              <label for="cost">Cost</label>
              <input class="form-control" type="number" name="cost" placeholder="cost" step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Jaco Beach, Costa Rica">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <a href="/surfspots">Go Back</a>   
        </form>
    </div>
</div>




<% include ../partials/footer %>
