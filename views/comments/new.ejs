<% include ../partials/header %>


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 style="text-align: center;">Add New Comment to <%= surfspot.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/surfspots/<%= surfspot._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            <a href="/surfspots">Go Back</a>   
    </form>
    </div>
</div>




<% include ../partials/footer %>